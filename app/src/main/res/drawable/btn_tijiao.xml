<?xml version="1.0" encoding="UTF-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">   
<!-- 连框颜色值 --><item>   
  <shape>   
    <solid android:color="@color/white" />   
    <corners android:radius="0dp" />    
       
  </shape>  
</item>   
<!-- 主体背景颜色值 -->  
<item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">   
     <shape>   
    <gradient android:startColor="#d3a8dd" android:centerColor="#d3a8dd" 
    android:endColor="#d3a8dd" android:type="linear" android:angle="90"  
    android:centerX="0.5" android:centerY="0.5" />  
   
    <padding android:left="20dp" android:top="10dp" android:right="20dp"  
    android:bottom="10dp" />  
   <!-- 应该是圆角 -->
    <corners android:radius="6dp" />    
     </shape>	 
</item>  
</layer-list>
