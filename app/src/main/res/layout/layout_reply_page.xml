<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/bgumeng_header"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@id/imv01_title_bar22"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:contentDescription="@null"
                android:src="@drawable/icon_arrow_left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@id/txtHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.netlab.loveofmum.widget.XScrollView.PullToRefreshLayout
            android:id="@+id/refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <include layout="@layout/refresh_head" />

            <com.netlab.loveofmum.widget.PullableScrollView
                android:id="@+id/sv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <!--
                 <LinearLayout 
                android:id="@+id/llayout"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/ivhead"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginTop="12dp"
                                android:src="@drawable/touxiang" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/tvname"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                   />                                                                                                                                                                                                                                                                                                 />
                                
                              <LinearLayout 
                                  android:layout_marginTop="5dp"
                                    android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvcreatedate"
                                  
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                 
                                  />
                                <TextView 
                                      android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    />
                           <TextView
                                    android:id="@+id/tvhits"
                                    
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                   android:layout_marginRight="5dp"
                                   
                                   />
                           </LinearLayout>
                              
                            </LinearLayout>
                                 
                            
                        </LinearLayout>

                        <com.netlab.loveofmum.widget.FoundWebView
                            android:id="@id/reply_page_web"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@color/pinkback" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="他的文章"
                            android:textColor="@color/pink"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="12dp"
                            android:background="@color/line" />

                        <com.netlab.loveofmum.widget.ListViewForScrollView
                            android:id="@+id/reply_page_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@color/pinkback" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/reply_pinglun_page"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/doc_pinlun"
                                    android:layout_width="56dp"
                                    android:layout_height="fill_parent"
                                    android:text="评论：21"
                                    android:textColor="@color/timeset_color"
                                    android:textSize="@dimen/fontsize12" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/reply_zan_page_linear"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/doc_zan"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:text="赞：20"
                                    android:textSize="@dimen/fontsize12" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/line" />
                    </RelativeLayout>

                    <com.netlab.loveofmum.widget.ListViewForScrollView
                        android:id="@+id/listviewcontent"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="-5dp"
                        android:divider="@null" >
                    </com.netlab.loveofmum.widget.ListViewForScrollView>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="60dp" />
                </LinearLayout>
            </com.netlab.loveofmum.widget.PullableScrollView>

            <include 
                android:id="@+id/loadmore"
                layout="@layout/load_more" />
        </com.netlab.loveofmum.widget.XScrollView.PullToRefreshLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/bottom_chk"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_sendmessage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:layout_heightPercent="70%"
                app:layout_widthPercent="75%"
                android:background="@drawable/edittext1"
                android:hint="添加评论"
                android:singleLine="true"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                app:layout_heightPercent="35%"
                app:layout_widthPercent="8%"
                android:background="@drawable/love"
                android:clickable="true"
                android:onClick="goZan" />

            <ImageView
                android:id="@+id/iv_send"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                app:layout_heightPercent="35%"
                app:layout_widthPercent="8%"
                android:background="@drawable/send"
                android:clickable="true"
                android:onClick="goSend" />
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>

</LinearLayout>