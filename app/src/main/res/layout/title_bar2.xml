<?xml version="1.0" encoding="utf-8"?>  
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="45dip" android:orientation="vertical" android:background="@color/home">
	<RelativeLayout android:layout_width="fill_parent" android:layout_height="45dip" android:gravity="center_vertical" >
          <ImageView
           android:id="@id/img_left"
			  android:layout_width="45dp"
			  android:padding="12dp"
			  android:layout_height="match_parent"
			  android:src="@drawable/icon_arrow_left"
	         />
        
		  <LinearLayout
		      android:layout_width="wrap_content"
		      android:layout_height="match_parent"
		      android:layout_centerInParent="true" android:gravity="center_vertical">
				<ImageView
           android:id="@id/btn_left"
	       android:layout_width="30.0dip"
	       android:layout_height="15.0dip"
	       android:layout_marginLeft="8dip"
	       android:contentDescription="@null"
	       android:layout_alignParentLeft="true"
	       android:src="@drawable/btn_l"
	       android:layout_centerVertical="true"
	         />
	          <TextView
	              android:id="@id/txtHead"
	              android:layout_width="wrap_content"
	              android:layout_height="match_parent"
	              android:layout_centerVertical="true"
	              android:layout_centerHorizontal="true"
	              android:gravity="center"
				  android:layout_gravity="center_vertical"
	              
	              android:textColor="@color/white"
	              android:textStyle="bold"
	              android:textSize="18sp"
	              android:text="产检时间表" />
	          <ImageView
           android:id="@id/btn_right"
	       android:layout_width="30.0dip"
	       android:layout_height="15.0dip"

	       android:contentDescription="@null"
	       android:layout_alignParentLeft="true"
	       android:src="@drawable/btn_r"
	       android:layout_centerVertical="true"
	         />
          </LinearLayout>
          <TextView
                android:id="@+id/txt_tips"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_centerVertical="true"
	              android:layout_alignParentRight="true"
	              android:layout_marginRight="7dp"
	              android:text="小贴士"
	              android:textSize="@dimen/fontsize14"
	              android:textColor="@color/white"
	              android:gravity="center" />
      </RelativeLayout>
</LinearLayout>

