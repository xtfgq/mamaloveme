<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_centerInParent="true"
    android:background="@drawable/whitecorner">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/dialog_default_click_text_title"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/pink"
                android:text=""
                android:textSize="@dimen/fontsize16" />
   
    </RelativeLayout>
    <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
        
         android:background="@color/gray2" />
    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/dialog_edit_text_msg"
         android:layout_width="match_parent"
         android:layout_marginLeft="25dp"
         android:layout_gravity="top"
         android:gravity="top"
         android:maxLines="3"
         android:background="@null"
         android:layout_marginRight="25dp"
         android:text=""
         android:textColor="@color/hometext"
	     android:layout_height="wrap_content"/>
    	<View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_marginTop="15dp"
         android:background="@color/gray2" />
    	<LinearLayout
    	 android:layout_width="match_parent"
        android:layout_height="wrap_content"  >
            <TextView 
	    android:id="@+id/dialog_default_click_cancel"
	    android:layout_width="0dp"
	    android:layout_height="48dp"
	    android:layout_weight="1"
	 android:layout_gravity="center_vertical"
	    android:gravity="center"
	    android:textColor="@color/pink"
	    android:text="取消"
	    />
<View
         android:layout_width="1dp"
         android:layout_height="fill_parent"
         android:background="@color/gray2" />
<TextView 
	    android:id="@+id/dialog_default_click_ensure"
	    android:layout_width="0dp"
	    android:layout_height="48dp"
	    android:layout_weight="1"
	   android:layout_gravity="center_vertical"
	    android:gravity="center"
	    android:textColor="@color/pink"
	    android:text="确定"/>
    	    
    	</LinearLayout>

</LinearLayout>
