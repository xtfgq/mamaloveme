<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        style="@style/paddingstyle3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="top">

                <com.netlab.loveofmum.widget.CircleImageView
                    android:id="@id/img001_item_chk_doctorlist"
                    android:layout_width="60dip"
                    android:layout_height="60dp" />

                <ImageView
                    android:id="@+id/iv_isonline"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:src="@drawable/icon_online" />
            </FrameLayout>

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/doc_des"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:id="@id/doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赵淑萍"
                        android:textColor="#ff313131"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@id/doctor_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:text="主任医师、教授"

                        android:textColor="#f54f81"
                        android:textSize="12sp" />


                </LinearLayout>

                <TextView
                    android:id="@id/hos_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="15dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="郑州大学第三附属医院"
                    android:textColor="#313131"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:id="@+id/doctor_jieshao"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="18"
                        android:ellipsize="end"
                        android:text="擅长剖宫产、阴模式子宫切除及妇科恶性肿瘤手术灯。擅长剖宫产、阴模式子宫切除及妇科恶性肿瘤手术灯。擅长剖宫产、阴模式子宫切除及妇科恶性肿瘤手术"
                        android:textColor="#666666"
                        android:lineSpacingExtra="6dp"

                        android:textSize="12sp" />

                    <ImageView


                        android:id="@id/img002_item_chk_doctorlist"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_weight="1.0"
                        android:layout_gravity="bottom|right"

                        android:scaleType="center"
                        android:src="@drawable/icon_arrow_down" />
                </LinearLayout>
                <View
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>