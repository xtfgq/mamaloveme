 <com.netlab.loveofmum.widget.XScrollView.RefreshLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/refreshindex"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/refresh_head" />
        <com.netlab.loveofmum.widget.UpScrollViewExtend
            android:id="@+id/sv_index"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/homeback"
                android:orientation="vertical">

                <!-- 头部 包括周期显示和宝宝的状况-->
                <RelativeLayout
                    android:id="@+id/rltt"
                    android:background="#fea1bf"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <LinearLayout
                        android:id="@+id/llchildleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="14dp"
                        android:layout_centerVertical="true"
                        android:paddingRight="24dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_left" />
                        <TextView
                            android:id="@+id/update"
                            android:layout_marginLeft="15dp"
                            android:layout_width="56dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:text="10月15日"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/currentdate"
                        android:layout_gravity="center"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:gravity="center"
                        android:text="8月2日"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_date"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:id="@+id/llchildright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingLeft="24dp"
                        android:paddingRight="14dp">
                        <TextView
                            android:id="@+id/nextdate"
                            android:layout_width="56dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:text="10月15日"/>
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_right" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.netlab.loveofmum.utils.DetialGallery
                        android:layout_marginTop="-35dp"
                        android:id="@+id/babygallery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="120dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tosingn"
                        android:background="@drawable/icon_wqd_singn"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#fd83aa"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_length"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="7dp"
                            android:text="宝宝身长"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/baby_height"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/view"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white" />
                    <LinearLayout
                        android:id="@+id/ll_record_file"
                        android:layout_width="0dp"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="距离预产期"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/baby_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white" />
                    <LinearLayout
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="7dp"
                            android:id="@+id/tv_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="宝宝体重"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/baby_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_index_content"
                    android:background="#fd83aa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:lineSpacingExtra="6dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="14sp" />
                    <!-- 广告处1-->
                <com.netlab.loveofmum.widget.ImageCycleView
                    android:id="@+id/baby_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                <!-- 产检预约-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="42dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_yuyue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/selecthos"
                        android:textColor="#62d7cb"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_viewhos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/selecthostips"
                        android:visibility="gone"
                        android:paddingLeft="20dp"
                        android:textColor="@color/pinktips"
                        android:textSize="10sp" />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/dottedline" />
                <RelativeLayout
                    android:id="@+id/rlchktiem"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:id="@+id/tvyuyue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="孕期产检时间表"
                        android:textColor="#313131"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/lltime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:text="孕期产检时间表"
                            android:textColor="#313131"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:text="NT/B超/四维彩超/ 快速预约"
                            android:textColor="#a9a9a9"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvchao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#fd83aa"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_jt" />
                </RelativeLayout>

                <!-- 搜索-->
                <LinearLayout
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/searchkey"
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/btn_nbnc"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- 孕社区-->
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/community_title"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/ivysq"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/icon_ysq" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/ivysq"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="@string/sq"
                        android:textColor="#13baa8"
                        android:textSize="18sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:gravity="right"
                            android:textColor="#fd83aa"
                            android:layout_marginRight="7dp"
                            android:textSize="12sp"
                            />
                        <ImageView
                            android:layout_marginRight="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_jt" />

                </LinearLayout>
                <com.netlab.loveofmum.widget.ImageCycleView
                    android:id="@+id/community_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <com.netlab.loveofmum.widget.ListViewForScrollView
                    android:id="@+id/community_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:divider="#efefef"
                    android:dividerHeight="1px"
                    android:fadingEdge="none" />
        <!--周提醒模块-->
                <LinearLayout
                    android:id="@+id/reminder_title"

                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_yqtx" />
                    <TextView
                        android:id="@+id/reminder_titlelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10.0dip"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#13baa8"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:gravity="right"
                        android:textColor="#fd83aa"
                        android:layout_marginRight="7dp"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_marginRight="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_jt" />
                </LinearLayout>
                <com.netlab.loveofmum.widget.ImageCycleView
                    android:id="@+id/reminder_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <com.netlab.loveofmum.widget.ListViewForScrollView
                    android:id="@+id/reminder_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:fadingEdge="none" />
            </LinearLayout>
            </com.netlab.loveofmum.widget.UpScrollViewExtend>
    </com.netlab.loveofmum.widget.XScrollView.RefreshLayout>

