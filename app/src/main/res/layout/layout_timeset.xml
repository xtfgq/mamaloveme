<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center"
	  android:clipToPadding="true"
    android:fitsSystemWindows="true"
	 android:background="@drawable/bg_ycq_set"
	  android:weightSum="5" >
	 <LinearLayout 
	         android:layout_width="fill_parent"
			 android:layout_height="0dp"
			 android:layout_weight="1.5"
			 android:orientation="vertical">
			
	
	<RelativeLayout 
	    android:id="@id/header" 
	    android:layout_width="fill_parent" 
	    android:layout_height="0dp"
	    android:layout_weight="1.9" >

		<ImageView
		    android:id="@id/img_logo"
		    android:layout_width="95dp"
		    android:layout_height="109dp"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/pic_logo_s"
		    android:scaleType="centerInside" />

	</RelativeLayout>
	     <View 
			     android:layout_weight="0.7"     
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"  
		       />
	     </LinearLayout>
	
			<!-- <TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@id/date_set"
			android:gravity="left" style="@style/time_set_dip" android:text="@string/str_time_set" ></TextView> -->
<!-- 		<com.netlab.loveofmum.timepicker.DateDrumPicker -->
<!-- 			android:id="@id/datepicker" android:layout_width="fill_parent" -->
<!-- 			android:layout_height="wrap_content"/> -->
      <LinearLayout 
            android:layout_width="match_parent"
			android:layout_height="0dp"
			 android:layout_weight="1.5"
			 android:orientation="vertical">
			<LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_gravity="center_horizontal"
			        android:orientation="horizontal"
			        android:layout_weight="2" 
			       >
			
			        <RadioGroup
			            android:id="@+id/radioGroup"
			            android:layout_width="fill_parent"
			            android:layout_height="28dp"
			            android:layout_marginLeft="24dp"
			            android:layout_marginRight="24dp"
			            android:orientation="horizontal" >
			
			            <RadioButton
			                android:id="@+id/date_set"
			                android:layout_width="0dp"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:layout_gravity="center_vertical"
			                android:background="@drawable/btn_change_selectorleft"
			                android:button="@null"
			                android:checked="true"
			                android:gravity="center"
			                android:textColor="@color/white"
			                android:text="@string/str_time_set"/>
			
			      <RadioButton
			                android:id="@+id/date_yuejing"
			                 android:layout_width="0dp"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:layout_gravity="center_vertical"
			                android:background="@drawable/btn_change_selectorright"
			                android:button="@null"
			                android:gravity="center"
			                android:textColor="@color/timeset_color"
			                android:text="@string/str_time_yuejing_set"/>
			        </RadioGroup>
			    </LinearLayout>
			    <RelativeLayout 
			     android:layout_width="fill_parent"
			     android:layout_height="wrap_content" 
			     android:layout_weight="0.6" >
              <TextView
                  android:id="@+id/tv_lastyuejing"
                  android:layout_marginTop="5dp"
                 android:layout_width="fill_parent"
			     android:layout_height="wrap_content" 
			     android:layout_centerHorizontal="true"
			     android:gravity="center"
			     android:textColor="@color/timeset_color"
			   android:visibility="gone"
			     android:text=""/>
              </RelativeLayout>
              <DatePicker
			    android:id="@id/datepicker"
			    android:layout_marginLeft="48dp"
			    android:layout_marginRight="48dp"
			    android:layout_width="fill_parent"
			    android:layout_height="0dp"
			    android:layout_weight="5" 
			    android:foreground="#55ffffff"
			   
			    android:calendarViewShown="false"/>

</LinearLayout>
	
	<RelativeLayout
	    android:layout_weight="1.4"
	    android:id="@id/footer" android:gravity="top|center_horizontal" android:layout_width="fill_parent"  android:orientation = "vertical" android:layout_height="0dp" >
		<TextView
android:layout_marginTop="12dp"
			android:id="@+id/tv_yuchan"
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/timeset_color"
			android:textSize="14sp"

			/>

		<Button
		    android:id="@id/btnOK"

		    android:layout_gravity="center_vertical"
		    android:layout_marginTop="35dp"
		    android:layout_width="wrap_content"
		    android:layout_height="32dp"
		    android:layout_centerHorizontal="true"
		    android:layout_marginLeft="48dp"
		    android:layout_marginRight="48dp"
		    android:background="@drawable/btn_ok_selector"
		    android:gravity="center"
		    android:singleLine="true"
		    android:text="确   定"
		    style="@style/time_set_dip2"
		     />

	</RelativeLayout>
</LinearLayout>
