<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_view"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bgumeng_header"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@id/iv_01_the_second_page_of_medical_consultation"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="7dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_arrow_left" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@id/txtHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/zixunxiangqing_the_second_page_of_medical_consultation"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/global_wf_hw"
        android:layout_height="30dp"
        android:background="@drawable/bg_myzk03"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            style="@style/global_wwhw"
            android:orientation="horizontal" >

            <TextView
                style="@style/global_wwhw"
                android:layout_marginLeft="5dp"
                android:text="@string/wangxiaoxue_the_second_page_of_medical_consultation"
                android:textSize="15dp" />

            <TextView
                style="@style/global_wwhw"
                android:layout_marginLeft="5dp"
                android:text="@string/zhunren_the_second_page_of_medical_consultation"
                android:textColor="@color/timesetcolor001"
                android:textSize="10dp" />

            <TextView />
        </LinearLayout>

        <LinearLayout
            style="@style/global_wwwww"
            android:gravity="right" >

            <Button
                android:id="@id/btn_the_second_page_medical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_arrow_down" >
            </Button>
        </LinearLayout>
    </LinearLayout>
<L
></L>

<ListView
    android:id="@+id/listView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginBottom="40dp">
</ListView>

</LinearLayout>