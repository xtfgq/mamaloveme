<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content"  android:weightSum="10" android:gravity="center_vertical">
	<TextView android:layout_width="wrap_content"
		android:layout_height="50dp" android:id="@+id/itemText"
		android:textColor="@color/pink" android:textSize="16dp"
		android:layout_marginLeft="25dp" android:gravity="center_vertical" android:layout_weight="8"/>
	<ImageView android:layout_width="wrap_content"
	    android:id="@+id/imglist"
		android:layout_height="25dp" android:src="@drawable/btn_selected" android:layout_weight="2"/>
	
</LinearLayout>
