<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/feedlastitem"
    android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >


        <com.netlab.loveofmum.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
           />
    <LinearLayout
        android:paddingLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="#5f5f5f"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_yunchan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#a9a9a9"
            android:textSize="10sp" />
    </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="发表于"
                android:textColor="#a9a9a9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvquanziname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#13baa8"
                android:textSize="12sp" />

        </LinearLayout>


    <TextView
        android:layout_below="@+id/layout1"
        android:id="@+id/tv_tiltle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#313131"
        android:textSize="14sp" />

    <TextView
        android:layout_below="@+id/tv_tiltle"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:maxLength="30"
        android:textColor="#a9a9a9"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/fontsize12" />
    <LinearLayout
        android:layout_below="@+id/tv_content"
        android:id="@+id/llb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ion_ll"/>
        <TextView
            android:id="@+id/tv_pingview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="#a9a9a9"
            android:textSize="10sp"
            android:text="150"/>
        <ImageView

            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ion_pl"/>
        <TextView
            android:id="@+id/tv_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="#a9a9a9"
            android:textSize="10sp"
            android:text="150"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/llb"
        android:layout_marginBottom="1dp"
        android:textColor="#a9a9a9"
        android:textSize="9sp"
        android:layout_centerVertical="true"/>






</RelativeLayout>
