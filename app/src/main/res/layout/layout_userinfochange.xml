<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backed"
    android:orientation="vertical" 
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <include layout="@layout/title_bar" />
     <ScrollView
		 android:scrollbars="none"
        android:layout_width="fill_parent"  android:layout_height="fill_parent" >
    <LinearLayout 
        android:layout_width="fill_parent"  android:layout_height="fill_parent" android:orientation="vertical"
            >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />


	     <View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#EDEDED"
	    />   
	    <LinearLayout
			android:background="@color/white"
			android:id="@+id/selectavatar"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:weightSum="10"
	    >
	    <ImageView
	       style="@style/global_wwhw"
	       android:layout_width="25dip"
	       android:src="@drawable/icon_prot"
	      
	        />
	    <TextView 
	        
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dip"
	        android:textSize="15sp"
	        android:gravity="center_vertical"
	        android:maxLength="10"
	        android:background="@color/white"
	        android:text="头像修改"
	        android:layout_weight="10"
	        /> 
		<com.netlab.loveofmum.widget.CircularImage
	       android:layout_height="45dp"
	       android:id="@+id/avatar"
	       android:layout_width="45dp"
	        />
	</LinearLayout>

    <include layout="@layout/title_bar10" />

   
    
    <include layout="@layout/title_bar11" />
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#EDEDED"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:background="@color/white"
			android:paddingLeft="15dip"
			android:paddingRight="15dip"
			android:layout_height="50dip"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			>
			<ImageView
				style="@style/global_wwhw"
				android:layout_width="25dip"

				android:src="@drawable/str_ordercardno"
				/>
			<EditText
				android:id="@+id/checkID"
				android:layout_marginLeft="5dip"
				android:textSize="15sp"
				android:maxLength="20"
				android:inputType="number"
				android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
				style="@style/global_wwwww"
				android:background="@color/white"
				android:hint="@string/str_ordercardno"
				/>

		</LinearLayout>

    <include layout="@layout/title_bar12" />


		     <View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#EDEDED"
		    />  <LinearLayout 
		    android:layout_width="match_parent"
		android:background="@color/white"
		android:paddingLeft="15dip"
		android:paddingRight="15dip"
		    android:layout_height="50dip"
		    android:orientation="horizontal"
		    android:gravity="center_vertical"
		    >
		    <ImageView
		       style="@style/global_wwhw"
		          android:layout_width="25dip"
		       android:src="@drawable/icon_nl"
		        />

		    <EditText
		        android:id="@+id/year"
		        style="@style/global_wwwww"
		        android:layout_marginLeft="5dip"
		        android:background="@color/white"
		        android:hint="@string/reg_age"
		        android:inputType="number"
		        android:maxLength="20"
		        android:textSize="15sp" />
		
		</LinearLayout>
    
    <include layout="@layout/title_bar14" />
		     <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="#EDEDED"
		    />   
		    <LinearLayout 
		    android:layout_width="match_parent"
				android:background="@color/white"
				android:paddingLeft="15dip"
				android:paddingRight="15dip"
		    android:layout_height="50dip"
		    android:orientation="horizontal"
		    android:gravity="center_vertical"
		    >
		    <ImageView
		       style="@style/global_wwhw"
		       android:layout_width="25dip"
		       android:src="@drawable/icon_nc"
		        />
		    <EditText 
		        android:id="@+id/nickname"
		        android:layout_marginLeft="5dip"
		        android:textSize="15sp"
		        style="@style/global_wwwww"
		        android:background="@color/white"
		        android:maxLength="20"
		        android:hint="昵称"
		        /> 
		
		</LinearLayout>

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#EDEDED" />

		<LinearLayout
			android:id="@+id/editpwd"
			android:layout_width="match_parent"
			android:paddingRight="15dip"
			android:paddingLeft="15dip"
			android:layout_height="50dip"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:background="@color/white"
			>

			<ImageView
				style="@style/global_wwhw"
				android:layout_width="25dip"
				android:src="@drawable/icon_lock" />

			<TextView
				android:id="@id/et01_title_bar15"
				style="@style/global_wwwww"
				android:layout_marginLeft="5dp"
				android:background="@color/white"
				android:textSize="15sp"
				android:gravity="left|center_vertical"
				android:text="@string/reg_gengmi" />
		</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/selectbirth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
			android:id="@+id/ivdata3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dip"
               android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_data3" />

        <TextView

            android:layout_toRightOf="@+id/ivdata3"
            android:id="@+id/txt0001_user_set"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
           android:layout_centerVertical="true"
            android:text="预产期：" />

      
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" 
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ivcard"
            android:layout_width="25dp"
            android:layout_height="25dp"
          
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
         android:layout_centerVertical="true"
            android:background="@drawable/icon_card" />
    
        <com.netlab.loveofmum.widget.CustomerSpinner
        android:id="@+id/selectHospital"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
     android:layout_toRightOf="@+id/ivcard"
    android:textSize="15sp"
      android:layout_centerVertical="true"
			android:spinnerMode="dialog"
        android:background="@null"
      
        >
    </com.netlab.loveofmum.widget.CustomerSpinner>

            
        
    </RelativeLayout>

    <Button
       android:onClick="submit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/home_btn_bg4"
        android:text="@string/str_genggai"
        android:textColor="@color/white" />
</LinearLayout>
</ScrollView>
</LinearLayout>