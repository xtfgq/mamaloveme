<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:switch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"
 
   >

   <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content" 
     android:layout_centerVertical="true"
       android:layout_marginTop="12dp"
       android:orientation="horizontal"

     >
       <View
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_weight="3"/>
     <TextView 
         android:id="@+id/tv_content"

         android:text="1112225555333333"
         android:singleLine="true"
         android:ellipsize="end"
        android:layout_gravity="center_vertical"
         android:layout_width="0dp"
         android:layout_weight="3"
         android:layout_marginLeft="7dp"
         android:layout_marginRight="12dp"
         android:paddingLeft="7dp"
         android:paddingRight="7dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:background="@drawable/shap_border"
         android:textColor="@color/pink"

         android:layout_height="wrap_content" />
       <View
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"/>
       <com.netlab.loveofmum.UISwitchButton
           android:id="@+id/yuyue_item_switch_slideswitch"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           switch:bmWidth="50dp"
           switch:bmHeight="40dp"
           android:layout_weight="1.8"
           android:gravity="center"

           android:layout_gravity="center_vertical|center_horizontal"

            />
      
       
   </LinearLayout>
    

</RelativeLayout>
