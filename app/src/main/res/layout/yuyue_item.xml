<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:switch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dip"
   >


     <TextView 
         android:id="@+id/tv_content"
         android:text="120"
         android:singleLine="true"
         android:ellipsize="end"
         android:layout_width="match_parent"
         android:layout_toLeftOf="@+id/yuyue_item_switch_slideswitch"
         android:layout_marginRight="60dp"
         android:paddingLeft="7dp"
         android:paddingRight="7dp"
         android:paddingTop="5dp"
         android:layout_centerVertical="true"
         android:paddingBottom="5dp"
         android:background="@drawable/shap_border"
         android:textColor="@color/pink"

         android:layout_height="wrap_content" />

       <com.netlab.loveofmum.UISwitchButton
           android:id="@+id/yuyue_item_switch_slideswitch"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           switch:bmWidth="50dp"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           switch:bmHeight="40dp"
           android:gravity="center"

           android:layout_gravity="center_vertical|center_horizontal"

            />

    

</RelativeLayout>
