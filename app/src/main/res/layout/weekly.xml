<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/layout_view"
    android:orientation="vertical" 
      android:clipToPadding="true"
    android:fitsSystemWindows="true">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="45dp"
        android:background="@color/home"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@id/txtHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/weekly"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="10dp"/>
<LinearLayout style="@style/global_wwhw"
    android:orientation="vertical"
    android:background="@color/white">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="30dp" >

    <TextView
        style="@style/global_wwhw"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="@string/chanjianxiangmu" />

    <ImageView
        android:id="@+id/imageView1"
       android:layout_width="20dp"
       android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/nav_menu" />

</RelativeLayout>
<GridView
            android:id="@id/week_gidve"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:numColumns="3"
             />
</LinearLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="10dp"/>
<LinearLayout></LinearLayout>
<LinearLayout
    android:layout_height="40dp"
    style="@style/global_wf_hw"
    android:orientation="horizontal"
    android:background="@color/white"
    android:weightSum="10"
    ><TextView 
        android:layout_marginTop="15dp"
        android:layout_weight="5"
        style="@style/global_wwhw"
        android:text="@string/yiyuan"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@id/weekly_001"
        style="@style/global_wwhw"
        android:layout_weight="5"
        android:gravity="right"
        android:layout_marginTop="15dp"
        android:text="郑州大学第三附属医院"
        android:layout_marginRight="20dp"
        android:textSize="10sp" />

</LinearLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
<LinearLayout
    style="@style/global_wf_hw"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:weightSum="10"
    ><TextView 
        android:layout_weight="5"
        style="@style/global_wwhw"
        android:layout_marginTop="15dp"
        android:text="@string/yisheng"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@id/weekly_002"
        style="@style/global_wwhw"
        android:layout_weight="5"
        android:gravity="right"
        android:layout_marginTop="15dp"
        android:text="申爱民"
        android:layout_marginRight="20dp"
        android:textSize="10sp" />

</LinearLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
<LinearLayout
    style="@style/global_wf_hw"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:weightSum="10"
    ><TextView 
        android:layout_marginTop="15dp"
        android:layout_weight="5"
        style="@style/global_wwhw"
        android:text="@string/zhuangtai"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@id/weekly_003"
        style="@style/global_wwhw"
        android:layout_weight="5"
        android:gravity="right"
        android:layout_marginTop="15dp"
        android:text="已就诊"
        android:layout_marginRight="20dp"
        android:textSize="10sp" />

</LinearLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
<LinearLayout
    android:layout_height="40dp"
    style="@style/global_wf_hw"
    android:orientation="horizontal"
    android:background="@color/white"
    android:weightSum="10"
    ><TextView 
        android:layout_marginTop="15dp"
        android:layout_weight="5"
        style="@style/global_wwhw"
        android:text="@string/jianchadan"
        android:layout_marginLeft="10dp"
        />
<LinearLayout
  style="@style/global_wwhw"
android:layout_weight="5"
android:gravity="right"
    >

    <ImageView
        android:id="@id/weekly_004"
        style="@style/global_wwhw"
       android:layout_marginRight="20dp"
        android:background="@drawable/icon_photo"
        android:gravity="right"
        android:textSize="10sp" />
</LinearLayout>

</LinearLayout>
</LinearLayout>