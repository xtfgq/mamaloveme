<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="155dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="#ffb1c9" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@id/img_left"
                            android:layout_width="25.0dip"
                            android:layout_height="25.0dip"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dip"
                            android:contentDescription="@null"
                            android:src="@drawable/icon_arrow_left" />

                        <TextView
                            android:id="@id/txtHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="签到"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@id/img_right"
                            android:layout_width="30.0dip"
                            android:layout_height="30.0dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dip"
                            android:contentDescription="@null"
                            android:src="@drawable/icon_arrow_right"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/im_jf"
                            android:layout_width="25.0dip"
                            android:layout_height="25.0dip"
                            android:background="@drawable/img_qd_jb" />

                        <TextView
                            android:id="@+id/tvscore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvsignday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="7dp"
                    android:text="已经签到1天"
                    android:textColor="#666666" />

                <ImageView
                    android:id="@+id/ivjifen"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/img_qd_jfsc" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                      
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                              android:id="@+id/tv_add1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/btn_wqd_d"
                            android:gravity="center"
                            android:text="+5"
                            android:textColor="#ff7aa2"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="第一天"
                            android:textColor="@color/hei" />
                    </LinearLayout>

                    <LinearLayout
                      
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                              android:id="@+id/tv_add2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/btn_wqd_d"
                            android:gravity="center"
                            android:text="+10"
                            android:textColor="#ff7aa2"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="第二天"
                            android:textColor="@color/hei" />
                    </LinearLayout>

                    <LinearLayout
                     
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                               android:id="@+id/tv_add3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_wqd_d"
                            android:gravity="center"
                            android:text="+15"
                            android:textColor="#ff7aa2"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="第三天"
                            android:textColor="@color/hei" />
                    </LinearLayout>

                    <LinearLayout
                      
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                                android:id="@+id/tv_add4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_wqd_d"
                            android:gravity="center"
                            android:text="+20"
                            android:textColor="#ff7aa2"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="第四天"
                            android:textColor="@color/hei" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                              android:id="@+id/tv_add5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/btn_wqd_d"
                            android:gravity="center"
                            android:text="+25"
                            android:textColor="#ff7aa2"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="第五天"
                            android:textColor="@color/hei" />
                    </LinearLayout>

                    <LinearLayout
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                              android:id="@+id/tv_add6"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/btn_wqd_d"
                            android:gravity="center"
                            android:text="+30"
                            android:textColor="#ff7aa2"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="第六天"
                            android:textColor="@color/hei" />
                    </LinearLayout>

                    <LinearLayout
                         
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                             android:id="@+id/tv_add7"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/btn_wqd_d"
                            android:gravity="center"
                            android:text="+35"
                            android:textColor="#ff7aa2"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="第七天"
                            android:textColor="@color/hei" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/img_qd_bb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/bg_qd_wxts" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp"
                        android:text="宝宝温馨提示：要记得每天按时签到哦！如缺一天，就会从第一天开始哦！积分还可以到积分商城赚取礼品哦！"
                        android:textSize="@dimen/fontsize14"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>